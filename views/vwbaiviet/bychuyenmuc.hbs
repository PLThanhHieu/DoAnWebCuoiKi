{{#section 'css'}}
<link rel="stylesheet" href="../../css/style.css">
{{/section}}

<div class="card shadow mt-3">
    <h4 class="card-header"> Danh Sách bài viết</h4>
    <div class="card-body">
        <div class="row">
            {{#each this.baiviets}}
            <div class="col-4">
                <div class="contain">
                    <div class="row">
                        <div class="col-6">{{{AnhDaiDien}}}</div>
                        <div class="col-6">
                            <strong>
                                {{{TomTat}}}
                            </strong>
                        </div>
                    </div>
                </div>
                <a href="/chitiet/{{IdBaiViet}}">{{TieuDe}}</a>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col-sm-12">
                <nav aria-label="...">
                    <ul class="pagination">
                        {{#each this.pages}}  
                            {{#if active}}
                                <li class="page-item active" aria-current="page">
                                    <a class="page-link" href="javascript:;">{{values}}<span class="sr-only">(current)</span></a>
                                </li>
                            {{else}}
                                 <li class="page-item"><a class="page-link" href="?page={{values}}">{{values}}</a></li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>