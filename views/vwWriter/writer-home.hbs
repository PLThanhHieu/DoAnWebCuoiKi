<div class="card showdow">
    <h4 class="card-header">
        Danh sách bài viết Xuất bản
    </h4>
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID Bài viết</th>
      <th scope="col">Tiểu đề bài viết</th>
      <th scope="col">Trạng thái</th>
      <th scope="col"> Loại bài  viết</th>
      <th scope="col" class="text-right">
        <a class="btn btn-outline-success" href="/Writer/post" role="button">
          <i class="fa fa-plus" aria-hidden="true"> Bài viết mới</i>
        </a>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each xuatban}}
        <tr>
          <th scope="row">{{IdBaiViet}}</th>
          <td>
              <a href="/chitiet/{{IdBaiViet}}">{{TieuDe}}</a>
          </td>
          <td>{{TrangThai}}</td>
          <td>{{LoaiBaiViet}}</td>
        </tr>
    {{/each}}
  </tbody>
</table>
</div>
