

{{#section 'js'}}
    <script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    
    <script>
        $(function() {

            $('#doimatkhau').validate({
                rules:{
                    passcu:{
                        required: true,
                        minlength:6,
                        remote:{
                            url:'/Account/saimatkhaucu'
                        }
                    },
                    passmoi:{
                        required: true,
                        minlength:6
                    },
                    confirm:{
                        required: true,
                        equalTo: $('[name="passmoi"]')
                    },
                    
                },
                messages:{
                    passcu:{
                        required: 'Không để trống tài khoản!',
                        remote: 'Sai mật khẩu cũ!'
                    },
                    passmoi:{
                        required: 'Không để trống mật khẩu!'
                    },
                    confirm:{
                        required: 'Không để trống!',
                        equalTo: 'Nhập lại mật khẩu khổng đúng!'
                    },
                },
                errorElement:'small',
                errorClass:'help-block text-danger',
                highlight: function (e) {
                    $(e).removeClass('is-valid').addClass('is-invalid');
                },
                unhighlight: function (e) {
                    $(e).removeClass('is-invalid').addClass('is-valid');
                }
            });
        })
    </script>
{{/section}}

<div class="container-fluid h-100">
        <div class="row justify-content-center align-items-center h-100" >
            <div class="col-sm-4 col-md-3" >
                <form method="POST" id="doimatkhau">
                    <div class="form-group">
                        <label for="txtpassword">Mật khẩu cũ</label>
                        <input type="password" class="form-control" id="txtpassword" placeholder="Mật khẩu cũ" name="passcu">
                    </div>
                    <div class="form-group">
                        <label for="txtpassword">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="txtpassword" placeholder="Mật khẩu mới" name="passmoi">
                    </div>
                    <div class="form-group">
                        <label for="txtpassword">Nhập lại mật khẫu mới</label>
                        <input type="password" class="form-control" id="txtpassword" placeholder="Mật khẩu mới" name="confirm">
                    </div>
                    <button type="submit" class="btn btn-success  btn-block">Đồng ý</button>
                    <a class="btn btn-danger btn-block" href="/Account/profile" role="button">
                        Hủy
                    </a>
                    
                </form>
            </div>
        </div>
    </div>